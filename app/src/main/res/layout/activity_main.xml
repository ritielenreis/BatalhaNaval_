<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telainicial"
    android:orientation="vertical"

    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/textJogadorDN"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:fontFamily="@font/adlam_display"
                android:shadowColor="#0B3C68"
                android:shadowRadius="40"
                android:text="Batalha Naval"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="80dp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnProx"
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:backgroundTint="#25E42F"
                android:insetLeft="50dp"
                android:insetRight="50dp"
                android:onClick="iniciarJogo"
                android:shadowColor="@color/black"
                android:shadowRadius="80"
                android:text="Iniciar Jogo"
                android:textAlignment="center"
                android:textSize="45dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>