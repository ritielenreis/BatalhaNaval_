<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telainicial"

    android:orientation="vertical"
    tools:context=".ganhador" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="112dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Vencedor Ã©"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vencedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Jogador 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="177dp" />

    <Button
        android:id="@+id/btnfinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#25E42F"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:onClick="jogarNovamente"
        android:text="Jogar Novamente"
        android:textAlignment="center"
        android:textSize="35dp"
